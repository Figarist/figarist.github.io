---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">

  <!-- English: Home -->
  <url>
    <loc>{{ site.url }}/</loc>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/" />
    <xhtml:link rel="alternate" hreflang="uk" href="{{ site.url }}/uk/" />
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}/" />
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Ukrainian: Home -->
  <url>
    <loc>{{ site.url }}/uk/</loc>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/" />
    <xhtml:link rel="alternate" hreflang="uk" href="{{ site.url }}/uk/" />
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}/" />
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Blog Posts -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endfor %}

  <!-- Pages -->
  {% for page in site.pages %}
    {% if page.url contains '.xml' or page.url contains 'assets' or page.url == '/404.html' or page.url == '/' or page.url == '/uk/' %}{% continue %}{% endif %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endfor %}

</urlset>
